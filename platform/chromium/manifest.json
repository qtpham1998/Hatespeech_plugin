{
  "name" : "H8BL*CK",
  "version" : "1.0",
  "description" : "A hatespeech and offensive language remedial plugin.",
  "permissions" : ["tabs", "storage"],
  "background" : {
    "page" : "background.html"
  },
  "browser_action" : {
    "default_title" : "H8BL*CK",
    "default_popup" : "popup.html",
    "default_icon" : "/img/plugin_darkred_icon.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : [
        "/js/lib/jquery-3.4.1.min.js",
        "/js/lib/semantic.min.js",
        "/js/api.js",
        "/js/constants.js",
        "/js/messages.js",
        "/js/templates.js",
        "/js/contentScript.js"
      ],
      "css" : ["/css/contentScript.css"],
      "run_at" : "document_idle",
      "all_frames" : true
    }
  ],
  "icons" : {
    "16" : "/img/plugin_darkred_icon.png",
    "32" : "/img/plugin_darkred_icon.png",
    "48" : "/img/plugin_darkred_icon.png",
    "128" : "/img/plugin_darkred_icon.png"
  },
  "web_accessible_resources" : [
    "/csv/*.csv",
    "/js/lib/*",
    "/css/*.css"
  ],
  "manifest_version" : 2
}
